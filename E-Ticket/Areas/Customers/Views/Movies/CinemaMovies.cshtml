@model List<E_Ticket.Models.Movie>

<h2 class="movies-title">Movies in this Cinema</h2>

<div class="movies-container">
    @foreach (var movie in Model)
    {
        <a asp-action="Details" asp-route-MovieId="@movie.Id" class="movie-card">
            <img src="~/images/movies/@movie.ImgUrl" alt="@movie.Name" class="movie-image">
            <div class="movie-overlay">
                <h3 class="movie-name">@movie.Name</h3>
            </div>
        </a>
    }
</div>

<a asp-action="Cinema" class="back-button">Back to Cinemas</a>



<!-- Custom Styles -->
<style>
    /* Movies Title */
    .movies-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin: 20px 0;
    }

    /* Movies Container */
    .movies-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        justify-content: center;
        padding: 20px;
        max-width: 90%;
        margin: auto;
    }

    /* Movie Card */
    .movie-card {
        display: block;
        position: relative;
        background: #000;
        border-radius: 10px;
        overflow: hidden;
        text-decoration: none;
        transition: transform 0.3s ease-in-out;
    }

        .movie-card:hover {
            transform: scale(1.1);
        }

    /* Movie Image */
    .movie-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        display: block;
    }

    /* Movie Overlay */
    .movie-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        padding: 10px;
        text-align: center;
    }

    .movie-name {
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
    }

    /* Back Button */
    .back-button {
        display: block;
        text-align: center;
        margin: 20px auto;
        padding: 10px 20px;
        background-color: #e50914;
        color: white;
        text-decoration: none;
        font-size: 1.2rem;
        border-radius: 5px;
        transition: background 0.3s;
    }

        .back-button:hover {
            background-color: #b20710;
        }

    /* Footer */
    .footer {
        text-align: center;
        background-color: #111;
        color: white;
        padding: 15px;
        margin-top: 30px;
        position: relative;
        bottom: 0;
        width: 100%;
    }
</style>
